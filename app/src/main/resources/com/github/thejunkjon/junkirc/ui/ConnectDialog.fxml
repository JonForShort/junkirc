<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.github.thejunkjon.junkirc.ui.ConnectDialogController">
    <children>
        <GridPane layoutX="5.0" layoutY="5.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="583.0" minWidth="10.0" prefWidth="100"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="583.0" minWidth="10.0" prefWidth="100"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="65.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="271.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="267.0" minHeight="10.0" prefHeight="53.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label text="Server:"/>
                <Label text="Port:" GridPane.rowIndex="1"/>
                <TextField GridPane.columnIndex="1"/>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Username:" GridPane.rowIndex="2"/>
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </children>
        </GridPane>
        <GridPane layoutX="5.0" layoutY="140.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" onAction="#handleConnect" prefHeight="26.0" prefWidth="299.0"
                        text="Connect"/>
                <Button mnemonicParsing="false" onAction="#handleCancel" prefHeight="26.0" prefWidth="325.0"
                        text="Cancel" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </children>
    <stylesheets>
        <URL value="@Base.css"/>
    </stylesheets>
</VBox>
